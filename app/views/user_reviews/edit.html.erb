<!-- Validation failure messages -->
<% if @user_review.errors.any? %>
  <% @user_review.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit User Review #<%= @user_review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_user_review/<%= @user_review.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="rating" class="control-label">
          Rating
        </label>

        <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="<%= @user_review.rating %>">
      </div>

      
      

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :name, @user_review.restaurant_id), :class => "form-control") %>
      </div>

      <!-- Label and input for comments -->
      <div class="form-group">
        <label for="comments" class="control-label">
          Comments
        </label>

        <input type="text" id="comments" name="comments" placeholder="Comments" class="form-control" value="<%= @user_review.comments %>">
      </div>

      <button class="btn btn-warning">
        Update User Review
      </button>
      or
      <a href="/user_reviews/<%= @user_review.id %>">Cancel</a>
    </form>
  </div>
</div>

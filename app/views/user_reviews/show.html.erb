<div class="page-header">
  <h3>User Review #<%= @user_review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Rating</dt>
      <dd><%= @user_review.rating %></dd>

      <dt>User</dt>
      <dd><%= @user_review.user_id %></dd>

      <dt>Restaurant</dt>
      <dd><%= @user_review.restaurant_id %></dd>

      <dt>Comments</dt>
      <dd><%= @user_review.comments %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/user_reviews" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @user_review.user %>
        <a href="/user_reviews/<%= @user_review.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_user_review/<%= @user_review.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

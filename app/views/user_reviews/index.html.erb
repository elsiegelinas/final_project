<div class="page-header">
  <h1>
    User reviews
    <a href="/user_reviews/new" class="btn btn-lg btn-success">New User review</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Rating</th>
        <th>User</th>
        <th>Restaurant</th>
        <th>Comments</th>
        <th>Actions</th>
      </tr>

      <% @user_reviews.each do |user_review| %>
      <tr>
        <td><%= user_review.rating %></td>
        <td>
          <% if user_review.user.present? %>
            <a href="/users/<%= user_review.user.id %>">
              <%= user_review.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if user_review.restaurant.present? %>
            <a href="/restaurants/<%= user_review.restaurant.id %>">
              <%= user_review.restaurant.name %>
            </a>
          <% end %>
        </td>
        <td><%= user_review.comments %></td>
        <td>
          <a href="/user_reviews/<%= user_review.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == user_review.user %>
            <a href="/user_reviews/<%= user_review.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_user_review/<%= user_review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @user_reviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

    <%= f.text_field :number_of_reviews_cont, :class => "form-control", :placeholder => "Number of reviews contains" %>
  </div>

<div class="form-group">
  <%= f.label :forecast_rating, "Forecast rating" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :forecast_rating_gteq, :class => "form-control", :placeholder => "Forecast rating greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :forecast_rating_lteq, :class => "form-control", :placeholder => "Forecast rating less than or equal to" %>

<div class="page-header">
  <h1>
    Restaurants
    <a href="/restaurants/new" class="btn btn-lg btn-success">New Restaurant</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Address</th>
        <th>Forecast rating</th>
        <th>Number of reviews</th>
        <th>Google rating</th>
        <th>Opentable rating</th>
        <th>Infatuation rating</th>
        <th>Tripadvisor rating</th>
        <th>Yelp rating</th>
        <th>Eater list</th>
        <th>Infatuation list</th>
        <th>Other top list</th>
        <th>Neighborhood</th>
        <th>Price</th>
        <th>Cuisine</th>
        <th>Hours</th>
        <th>Actions</th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.forecast_rating %></td>
        <td><%= restaurant.number_of_reviews %></td>
        <td><%= restaurant.google_rating %></td>
        <td><%= restaurant.opentable_rating %></td>
        <td><%= restaurant.infatuation_rating %></td>
        <td><%= restaurant.tripadvisor_rating %></td>
        <td><%= restaurant.yelp_rating %></td>
        <td><%= restaurant.eater_list %></td>
        <td><%= restaurant.infatuation_list %></td>
        <td><%= restaurant.other_top_list %></td>
        <td>
          <% if restaurant.neighborhood.present? %>
            <a href="/neighborhoods/<%= restaurant.neighborhood.id %>">
              <%= restaurant.neighborhood.name %>
            </a>
          <% end %>
        </td>
        <td><%= restaurant.price %></td>
        <td>
          <% if restaurant.cuisine.present? %>
            <a href="/cuisines/<%= restaurant.cuisine.id %>">
              <%= restaurant.cuisine.name %>
            </a>
          <% end %>
        </td>
        <td><%= restaurant.hours %></td>
        <td>
          <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">Show</a>
          <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_restaurant/<%= restaurant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @restaurants, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>